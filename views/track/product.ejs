<div class="container mt-4">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
      <h3 class="mb-0 d-flex align-items-center">
        <i class="fas fa-search-location text-primary me-2"></i>
        Kết quả truy xuất sản phẩm
      </h3>
    </div>
    <div class="card-body">
      <% if (product.blockchainId && product.blockchainId !== 'Đang xử lý') { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle me-2"></i> Sản phẩm này đã được xác thực trên blockchain
        </div>
      <% } else if (product.blockchainId === 'Đang xử lý') { %>
        <div class="alert alert-info">
          <i class="fas fa-sync fa-spin me-2"></i> Sản phẩm đang chờ được xác thực trên blockchain
        </div>
      <% } else { %>
        <div class="alert alert-secondary">
          <i class="fas fa-info-circle me-2"></i> Sản phẩm chưa được đưa lên blockchain
        </div>
      <% } %>
      
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="d-flex mb-3">
            <div>
              <h4><%= product.name %></h4>
              <h6 class="text-muted">Mã sản phẩm: <%= product.id %></h6>
            </div>
          </div>
          
          <table class="table">
            <tbody>
              <tr>
                <th style="width: 150px;">Nhà sản xuất</th>
                <td><%= product.manufacturer %></td>
              </tr>
              <tr>
                <th>Xuất xứ</th>
                <td><%= product.origin %></td>
              </tr>
              <tr>
                <th>Ngày sản xuất</th>
                <td>
                  <% 
                    let productionDate = '';
                    try {
                      if (product.productionDate) {
                        // Kiểm tra nếu là timestamp từ Firebase
                        if (product.productionDate.toDate) {
                          productionDate = product.productionDate.toDate().toLocaleDateString('vi-VN', {day: '2-digit', month: '2-digit', year: 'numeric'});
                        } 
                        // Kiểm tra nếu là Date hoặc chuỗi ISO
                        else if (!isNaN(new Date(product.productionDate))) {
                          productionDate = new Date(product.productionDate).toLocaleDateString('vi-VN', {day: '2-digit', month: '2-digit', year: 'numeric'});
                        }
                      }
                    %>
                    <%= productionDate || 'Không có dữ liệu' %>
                  <% } catch(e) { %>
                    Không có dữ liệu
                  <% } %>
                </td>
              </tr>
              <% if (product.expiryDate) { %>
              <tr>
                <th>Hạn sử dụng</th>
                <td>
                  <% 
                    let expiryDate = '';
                    try {
                      if (product.expiryDate) {
                        // Kiểm tra nếu là timestamp từ Firebase
                        if (product.expiryDate.toDate) {
                          expiryDate = product.expiryDate.toDate().toLocaleDateString('vi-VN', {day: '2-digit', month: '2-digit', year: 'numeric'});
                        } 
                        // Kiểm tra nếu là Date hoặc chuỗi ISO
                        else if (!isNaN(new Date(product.expiryDate))) {
                          expiryDate = new Date(product.expiryDate).toLocaleDateString('vi-VN', {day: '2-digit', month: '2-digit', year: 'numeric'});
                        }
                      }
                    %>
                    <%= expiryDate || 'Không có dữ liệu' %>
                  <% } catch(e) { %>
                    Không có dữ liệu
                  <% } %>
                </td>
              </tr>
              <% } %>
              <tr>
                <th>Số lô</th>
                <td><%= product.batchNumber || 'N/A' %></td>
              </tr>
              <tr>
                <th>Trạng thái hiện tại</th>
                <td>
                  <span class="badge bg-<%= 
                    product.currentStage === 'production' ? 'primary' : 
                    product.currentStage === 'packaging' ? 'info' : 
                    product.currentStage === 'distribution' ? 'warning' : 
                    product.currentStage === 'retail' ? 'success' : 
                    product.currentStage === 'sold' ? 'secondary' : 'dark' 
                  %>">
                    <%= product.currentStage %>
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-body text-center">
              <h5 class="card-title">Blockchain</h5>
              <p class="card-text">Sản phẩm này đã được xác thực trên blockchain</p>
              <div class="d-flex justify-content-center mb-3">
                <% if (qrCode) { %>
                  <img src="<%= qrCode.qrImageUrl %>" alt="QR Code" class="img-fluid" style="max-width: 150px;">
                <% } else { %>
                  <div class="bg-light d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;"></div>
                    <i class="fas fa-qrcode fa-3x text-muted"></i>
                  </div>
                <% } %>
              </div>
              <small class="text-muted">Blockchain ID: <%= product.blockchainId || 'Đang xử lý' %></small>
            </div>
          </div>
        </div>
      </div>

      <!-- Phần hiển thị thông tin xác thực blockchain -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Thông tin xác thực blockchain</h5>
        </div>
        <div class="card-body">
          <% if (product.blockchainId && product.blockchainId !== 'Đang xử lý') { %>
            <% if (product.verified === false) { %>
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo:</strong> Dữ liệu sản phẩm đã thay đổi so với bản gốc trên blockchain
              </div>
              
              <% if (productChanges && productChanges.length > 0) { %>
                <div class="mt-3">
                  <h6>Chi tiết thông tin đã thay đổi:</h6>
                  <div class="table-responsive">
                    <table class="table table-bordered table-sm">
                      <thead class="table-light">
                        <tr>
                          <th>Trường thông tin</th>
                          <th>Giá trị khi tạo</th>
                          <th>Giá trị hiện tại</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% productChanges.forEach(change => { %>
                          <tr>
                            <td><strong><%= change.fieldName %></strong></td>
                            <td>
                              <%= change.originalValue %>
                            </td>
                            <td class="<%= change.changed ? 'text-primary fw-bold' : '' %>">
                              <%= change.currentValue %>
                              <% if (change.changed) { %>
                                <i class="fas fa-pencil-alt text-primary ms-1" title="Đã thay đổi"></i>
                              <% } %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                    <div class="alert alert-info mt-2 small">
                      <i class="fas fa-info-circle"></i> 
                      Bảng trên hiển thị sự khác biệt giữa dữ liệu khi tạo sản phẩm và dữ liệu hiện tại.
                    </div>
                  </div>
                </div>
              <% } else { %>
                <div class="alert alert-info mt-3">
                  <i class="fas fa-info-circle me-2"></i>
                  <span>Không tìm thấy chi tiết cụ thể về sự thay đổi. Sản phẩm có thể đã được cập nhật nhưng chi tiết không còn lưu trữ.</span>
                </div>
              <% } %>
              
              <!-- Ẩn mã hash vào trong accordion để người dùng vẫn có thể xem nếu muốn -->
              <div class="accordion mt-3">
                <div class="accordion-item">
                  <h2 class="accordion-header" id="hashHeading">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                            data-bs-target="#hashDetails" aria-expanded="false" aria-controls="hashDetails">
                      Xem thêm thông tin kỹ thuật (mã hash)
                    </button>
                  </h2>
                  <div id="hashDetails" class="accordion-collapse collapse" aria-labelledby="hashHeading">
                    <div class="accordion-body">
                      <p><small class="text-muted">Mã hash được tạo từ dữ liệu sản phẩm và sử dụng để xác thực tính toàn vẹn</small></p>
                      <p><strong>Mã hash ban đầu:</strong></p>
                      <pre class="bg-light p-2 rounded"><%= product.originalHash %></pre>
                      <p><strong>Mã hash hiện tại:</strong></p>
                      <pre class="bg-light p-2 rounded"><%= product.currentHash %></pre>
                    </div>
                  </div>
                </div>
              </div>
            <% } else { %>
              <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                Dữ liệu sản phẩm đã được xác thực trên blockchain
              </div>
            <% } %>
          <% } else if (product.blockchainId === 'Đang xử lý') { %>
            <div class="alert alert-info">
              <i class="fas fa-sync fa-spin me-2"></i>
              Sản phẩm đang chờ được xác thực trên blockchain
            </div>
          <% } else { %>
            <div class="alert alert-secondary">
              <i class="fas fa-info-circle me-2"></i>
              Sản phẩm chưa được đưa lên blockchain
            </div>
          <% } %>
        </div>
      </div>

      <% if (product.description) { %>
        <div class="mb-4">
          <h5>Thông tin sản phẩm</h5>
          <p><%= product.description %></p>
        </div>
      <% } %>
      
      <h5 class="mb-3">Hành trình sản phẩm</h5>
      
      <div class="product-journey mb-4">
        <% 
        // Định nghĩa các helper functions cho timeline
        function _getStageIcon(stageName) {
          switch (stageName) {
            case 'production': return 'fas fa-cogs';
            case 'packaging': return 'fas fa-box';
            case 'qr_generated': return 'fas fa-qrcode';
            case 'distribution': return 'fas fa-truck';
            case 'retail': return 'fas fa-store';
            case 'sold': return 'fas fa-shopping-cart';
            case 'ownership_transfer': return 'fas fa-exchange-alt';
            default: return 'fas fa-circle';
          }
        }

        function _formatStageName(stageName) {
          switch (stageName) {
            case 'production': return 'Sản xuất';
            case 'packaging': return 'Đóng gói';
            case 'qr_generated': return 'Tạo mã QR';
            case 'distribution': return 'Chuyển đến đơn vị vận chuyển';
            case 'retail': return 'Đến nhà bán lẻ';
            case 'sold': return 'Đã bán';
            case 'ownership_transfer': return 'Chuyển quyền sở hữu';
            default: return stageName;
          }
        }

        function _formatTimestamp(timestamp) {
          if (!timestamp) return 'Không có thông tin';
          
          try {
            if (typeof timestamp.toDate === 'function') {
              return timestamp.toDate().toLocaleString('vi-VN');
            } else if (timestamp instanceof Date) {
              return timestamp.toLocaleString('vi-VN');
            } else {
              return new Date(timestamp).toLocaleString('vi-VN');
            }
          } catch (e) {
            return 'Không có thông tin';
          }
        }

        // Sử dụng helper functions được truyền từ controller nếu có, không thì dùng functions đã định nghĩa
        var getStageIcon = typeof getStageIcon !== 'undefined' ? getStageIcon : _getStageIcon;
        var formatStageName = typeof formatStageName !== 'undefined' ? formatStageName : _formatStageName;
        var formatTimestamp = typeof formatTimestamp !== 'undefined' ? formatTimestamp : _formatTimestamp;
        %>

        <div class="timeline">
          <% if (history && history.length > 0) { %>
            <% history.forEach((item, index) => { %>
              <div class="timeline-item">
                <div class="timeline-dot <%= 
                  item.stageName === 'production' ? 'bg-primary' : 
                  item.stageName === 'packaging' ? 'bg-info' : 
                  item.stageName === 'distribution' ? 'bg-warning' : 
                  item.stageName === 'retail' ? 'bg-success' : 
                  item.stageName === 'qr_generated' ? 'bg-info' :
                  'bg-secondary' 
                %>"></div>
                <div class="timeline-content">
                  <div class="d-flex justify-content-between mb-1">
                    <h6 class="<%= index === 0 ? 'text-primary fw-bold' : '' %>">
                      <% if (item.stageName === 'qr_generated') { %>
                        <i class="fas fa-qrcode me-2"></i> Tạo mã QR
                      <% } else if (item.stageName === 'distribution') { %>
                        <i class="fas fa-truck me-2"></i> Chuyển đến đơn vị vận chuyển
                      <% } else if (item.stageName === 'retail') { %>
                        <i class="fas fa-store me-2"></i> Đã đến nhà bán lẻ
                      <% } else if (item.stageName === 'ownership_transfer') { %>
                        <i class="fas fa-exchange-alt me-2"></i> Chuyển quyền sở hữu
                      <% } else { %>
                        <%= item.stageName.charAt(0).toUpperCase() + item.stageName.slice(1) %>
                      <% } %>
                    </h6>
                    <span class="text-muted small">
                      <% 
                        let stageTime = '';
                        try {
                          if (item.timestamp) {
                            // Kiểm tra nếu là timestamp từ Firebase
                            if (item.timestamp.toDate) {
                              stageTime = item.timestamp.toDate().toLocaleString('vi-VN');
                            } 
                            // Kiểm tra nếu là Date hoặc chuỗi ISO
                            else if (!isNaN(new Date(item.timestamp))) {
                              stageTime = new Date(item.timestamp).toLocaleString('vi-VN');
                            }
                          }
                        %>
                        <%= stageTime || 'Không có dữ liệu' %>
                      <% } catch(e) { %>
                        Không có dữ liệu
                      <% } %>
                    </span>
                  </div>
                  <div class="timeline-event">
                    <span class="timeline-event-icon"><i class="<%= getStageIcon(item.stageName) %>"></i></span>
                    <div class="timeline-event-content">
                      <h4 class="timeline-event-title"><%= formatStageName(item.stageName) %></h4>
                      <p class="timeline-event-time"><i class="fas fa-clock me-1"></i> <%= formatTimestamp(item.timestamp) %></p>
                      
                      <% if (item.stageName === 'distribution' && item.details && item.details.pickupLocation) { %>
                        <p class="timeline-event-location"><i class="fas fa-map-marker-alt me-1"></i> Địa điểm lấy hàng: <%= item.details.pickupLocation %></p>
                      <% } else { %>
                        <p class="timeline-event-location"><i class="fas fa-map-marker-alt me-1"></i> <%= item.location %></p>
                      <% } %>
                      
                      <p class="timeline-event-description"><%= item.description %></p>
                      
                      <% if (item.stageName === 'distribution' && item.details && item.details.finalRecipientName) { %>
                        <p class="timeline-event-detail"><i class="fas fa-user me-1"></i> Người nhận cuối: <%= item.details.finalRecipientName %></p>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="text-center text-muted py-4">
              <p>Không có dữ liệu lịch sử</p>
            </div>
          <% } %>
        </div>
      </div>
      
      <div class="d-flex justify-content-between mt-4">
        <a href="/track" class="btn btn-outline-primary">
          <i class="fas fa-search me-1"></i> Truy xuất sản phẩm khác
        </a>
        <a href="/" class="btn btn-outline-secondary">
          <i class="fas fa-home me-1"></i> Về trang chủ
        </a>
      </div>
    </div>
  </div>
</div>

<style>
.timeline {
  position: relative;
  padding: 0;
  list-style: none;
}

.timeline:before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 20px;
  width: 2px;
  background-color: #e9ecef;
}

.timeline-item {
  position: relative;
  padding-left: 50px;
  padding-bottom: 30px;
}

.timeline-dot {
  position: absolute;
  left: 16px;
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.timeline-content {
  padding: 15px;
  border-radius: 5px;
  background-color: #f8f9fa;
  border-left: 3px solid #dee2e6;
}

.timeline-meta {
  display: flex;
  justify-content: space-between;
  margin-top: 5px;
  font-size: 0.85rem;
  color: #6c757d;
}

.timeline-meta span {
  margin-right: 10px;
}

.timeline-event {
  display: flex;
  margin-top: 10px;
}

.timeline-event-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background-color: #e9ecef;
  border-radius: 50%;
  margin-right: 15px;
}

.timeline-event-content {
  flex: 1;
}

.timeline-event-title {
  font-size: 1.1rem;
  margin-bottom: 5px;
  font-weight: 600;
}

.timeline-event-time, 
.timeline-event-location, 
.timeline-event-description,
.timeline-event-detail {
  margin-bottom: 5px;
  font-size: 0.9rem;
  color: #6c757d;
}
</style>

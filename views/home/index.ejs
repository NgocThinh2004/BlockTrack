<style>
  .process-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    margin: 0 auto;
  }
  
  .process-step {
    position: relative;
    z-index: 1;
  }
  
  .process-connector {
    position: absolute;
    top: 30px;
    right: -50%;
    width: 100%;
    height: 2px;
    background-color: #dee2e6;
    z-index: 0;
  }
  
  .hero-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
  }
</style>

<script>
  document.getElementById('openScanner').addEventListener('click', function() {
    if ('mediaDevices' in navigator && 'getUserMedia' in navigator.mediaDevices) {
      alert('Vui lòng cho phép truy cập camera để quét mã QR');
      // Trong ứng dụng thực tế, đây sẽ mở một modal với scanner QR
    } else {
      alert('Trình duyệt của bạn không hỗ trợ quét mã QR. Vui lòng nhập mã sản phẩm.');
    }
  });
</script>

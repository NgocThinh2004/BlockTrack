<!-- Thanh điều hướng -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <i class="fas fa-cubes me-2"></i>
      <span class="fw-bold">BlockTrack</span>
    </a>
    
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">
          <i class="fas fa-home me-1"></i> Trang chủ
        </a>
      </li>
    </ul>
  </div>
</nav>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-success">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
          </div>
          <h2 class="card-title mb-3">Đăng ký thành công!</h2>
          <p class="card-text mb-4">
            Chào mừng <strong><%= user.name %></strong> đã tham gia hệ thống truy xuất nguồn gốc sản phẩm với vai trò
            <span class="badge <%= 
              user.role === 'producer' ? 'bg-success' :
              user.role === 'distributor' ? 'bg-primary' :
              user.role === 'retailer' ? 'bg-info' :
              'bg-secondary'
            %>"><%= user.role %></span>
          </p>
          
          <div class="d-grid gap-3">
            <a href="/auth/login" class="btn btn-primary btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập ngay
            </a>
            <a href="/" class="btn btn-outline-secondary">
              <i class="fas fa-home me-2"></i> Về trang chủ
            </a>
          </div>
          
          <% if (locals.redirectToLogin) { %>
          <div class="mt-4 alert alert-info">
            <p class="mb-0">Bạn sẽ được tự động chuyển đến trang đăng nhập sau <span id="countdown">3</span> giây</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if (locals.redirectToLogin) { %>
<script>
  // Tự động chuyển hướng đến trang đăng nhập sau 3 giây
  let secondsLeft = 3;
  const countdownElement = document.getElementById('countdown');
  
  const countdownInterval = setInterval(function() {
    secondsLeft--;
    countdownElement.textContent = secondsLeft;
    
    if (secondsLeft <= 0) {
      clearInterval(countdownInterval);
      window.location.href = '/auth/login';
    }
  }, 1000);
</script>
<% } %>
